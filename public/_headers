# Cache HTML (index.html) for a short time so browser always gets the latest
/*
  Cache-Control: public, max-age=0, must-revalidate

# Cache JS, CSS, and media (hashed filenames) for a long time
/static/js/*
  Cache-Control: public, max-age=31536000, immutable

/static/css/*
  Cache-Control: public, max-age=31536000, immutable

/static/media/*
  Cache-Control: public, max-age=31536000, immutable

# Optional: cache other static files like fonts
/static/fonts/*
  Cache-Control: public, max-age=31536000, immutable
