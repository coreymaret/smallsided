{
  "compilerOptions": {
    // Enable composite mode for project references
    "composite": true,

    // Where TypeScript stores incremental build info (for faster rebuilds)
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    // ECMAScript version of output JavaScript (modern JS features allowed)
    "target": "ES2023",

    // Built-in libraries included (no DOM since this is for Node)
    "lib": ["ES2023"],

    // Output module system (Vite + Node use modern ES modules)
    "module": "ESNext",

    // Include Node.js type definitions (gives access to things like process, __dirname, etc.)
    "types": ["node"],

    // Skip type checking in node_modules for faster compilation
    "skipLibCheck": true,


    /* ------------------------------
       ‚öôÔ∏è  Bundler Mode Configuration
       ------------------------------ */

    // Use Node module resolution for compatibility with project references
    "moduleResolution": "node",

    // Don't allow importing .ts files directly when using project references
    "allowImportingTsExtensions": false,

    // Allow default imports from modules without default export
    "allowSyntheticDefaultImports": true,

    // Better CommonJS/ESM interop
    "esModuleInterop": true,

    // Treat all files as modules even if they don't have import/export statements
    "moduleDetection": "force",

    // REMOVED: noEmit (project references can't disable emit)
    // TypeScript will emit declaration files for project references


    /* ------------------------------
       üßπ Linting & Safety Options
       ------------------------------ */

    // Enable all strict type-checking options for maximum safety
    "strict": true,

    // Error if you have variables that are declared but never used
    "noUnusedLocals": true,

    // Error if function parameters are declared but never used
    "noUnusedParameters": true,

    // Prevent missing 'break' statements in switch-case blocks
    "noFallthroughCasesInSwitch": true
  },

  // Files that this TypeScript configuration applies to
  "include": ["vite.config.ts"]
}